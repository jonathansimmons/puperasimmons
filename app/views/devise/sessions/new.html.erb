<div id="action_box">
  <%= image_tag asset_path("logo.png"), class: "logo" %>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="col-md-10 col-md-offset-1">
			<div class="form-group">
		  	<i class="fa fa-user"></i>
			  <%= f.email_field :email, :autofocus => true, placeholder: 'Email Address', class: 'form-control', value: params[:email] %>
		  </div>
		  <div class="form-group">
		  	<i class="fa fa-lock"></i>
		  	<%= f.password_field :password , placeholder: 'Password', class: 'form-control' %>

		  </div>
		  <div class="form-group">
		  	<%= f.label :remember_me, class: "checkbox col-md-6" do %>
					<%= f.check_box :remember_me %> Remember Me
		  	<% end -%>
		  	<%= f.submit "Sign in", class: "btn btn-default col-md-6 pull-right" %>
		  </div>
	  </div>
	<% end %>
</div>