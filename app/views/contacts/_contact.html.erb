<li class="contact" data-contact-id="<%= contact.uid %>">
  <%= link_to contact do %>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6">
        <span class="identity name"><%= contact.name %></span>
        <span class="identity details"><%= "#{contact.transaction_type.gsub("_", " ").titleize}" %></span>
      </div>
      <div class="col-md-5 col-sm-5 col-xs-5">
        <span class="info phone"><%= number_to_phone(contact.phone) %></span>
        <span class="info email"><%= contact.email %></span>
      </div>
      <div class="col-md-1 col-sm-1 col-xs-1">
        <%= link_to edit_contact_path(contact), class: "btn btn-default btn-sm-round pull-right", remote: true do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
      </div>
    </div>
  <% end %>
</li>