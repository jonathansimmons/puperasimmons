<li class="<%= activity.id.in?(@unread_activities.collect{|a| a.id}) ? 'activity unread' : 'activity' %>" data-activity-id="<%= activity.uid %>">
	<% if activity.trackable %>
		<%= link_to read_activity_path(activity.uid) do %>
		  <%= render "public_activity/time", activity: activity %>
		  <div class="content">
	      <%= activity.owner.name %> completed the task: <span class="highlight"><%= truncate(activity.trackable.content, length:50) %></span>.
		  </div>
		 <% end %>
	<% else %>
		<%= render "public_activity/time", activity: activity %>
	  <div class="content">
	      <%= activity.owner.name %> commented on a task which has since been removed.
	  </div>
	<% end %>
</li>