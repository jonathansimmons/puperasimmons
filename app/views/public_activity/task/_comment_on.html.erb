<li class="<%= activity.id.in?(@unread_activities.collect{|a| a.id}) ? 'activity unread' : 'activity' %>">
	<%= link_to read_activity_path(activity.uid) do %>
	  <%= render "public_activity/time", activity: activity %>
	  <div class="content">
	    <% if activity.trackable %>
	      <%= activity.owner.name %> commented on <span class="highlight"><%= activity.trackable.content %></span>.
	    <% else %>
	      <%= activity.owner.name %> commented on a task which has since been removed.
	    <% end %>
	  </div>
	 <% end %>
</li>